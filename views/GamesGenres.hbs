<h1>Games Genres</h1>

{{! READ table }}
<table>
    <thead>
        <tr>
            {{#each GamesGenres.[0]}}
            <th>{{@key}}</th>
            {{/each}}
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each GamesGenres}}
        <tr>
            <td>{{this.gameName}}</td>
            <td>{{this.genreName}}</td>
            <form id="delete_gamesGenres_form">
                <input type="hidden" name="delete_gamesGenres_gameID" value="{{this.gameID}}">
                <input type="hidden" name="delete_gamesGenres_genreID" value="{{this.genreID}}">
                <td><button type="submit">Delete</button></td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Add a Genre to a Game</h2>
<form class="cuForm" id="create_gamesGenres_form">
    <label for="update_gamesGenres_gameID">Game: </label>
    <select name="update_gamesGenres_gameID" id="update_gamesGenres_gameID" required>
        <option value="" disabled selected>Select a Game</option>
        {{#each Games}}
        <option value="{{this.gameName}}" required>
            {{this.gameID}} - {{this.gameName}}
        </option>
        {{/each}}
    </select>

    <label for="update_gamesGenres_genreID">Genre: </label>
    <select name="update_gamesGenres_genreID" id="update_gamesGenres_genreID" required>
        <option value="" disabled selected>Select a Genre</option>
        {{#each Genres}}
        <option value="{{this.genreName}}" required>
            {{this.genreID}} - {{this.genreName}}
        </option>
        {{/each}}
    </select>

    <input type="submit">
</form>
